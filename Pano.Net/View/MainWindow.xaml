                                                <MultiBinding StringFormat="Size: {0} Bytes">
                                                    <Binding Path="Size"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
